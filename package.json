{
  "name": "@devimasolutions/deploy",
  "version": "0.1.0",
  "description": "CLI tool for deployment JS projects via SSH",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "eslint \"{actions,bin,commands,lib}/**/*.ts\" --fix",
    "typescript": "tsc --noEmit",
    "setup": "rimraf .husky/pre-commit .husky/pre-push && husky add .husky/pre-commit \"npx lint-staged\"",
    "clean": "gulp clean",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "prepublish": "npm run build",
    "publish": "npm publish --access=public",
    "start": "node bin/deploy.js",
    "dev": "npm run build && npm run start"
  },
  "engines": {
    "node": ">= 14.16.0"
  },
  "bin": {
    "ds-deploy": "bin/deploy.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:DevimaSolutions/deploy.git"
  },
  "keywords": [
    "deployment",
    "github actions",
    "pm2",
    "ssh"
  ],
  "author": "DevimaSolutions <welcome@devima.solutions> (https://github.com/DevimaSolutions)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DevimaSolutions/deploy/issues"
  },
  "homepage": "https://github.com/DevimaSolutions/deploy#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node-emoji": "^1.8.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chalk": "^5.2.0",
    "commander": "^10.0.0",
    "del": "^7.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "inquirer": "^9.1.4",
    "jest": "^27.2.5",
    "lint-staged": "^13.1.0",
    "node-emoji": "^1.11.0",
    "ora": "^6.1.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
